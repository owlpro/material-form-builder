{
    "compilerOptions": {
        /* Language and Environment */
        "target": "es2020",
        "jsx": "react-jsx",

        /* Modules */
        "module": "ES2020",
        "moduleResolution": "Bundler",

        /* Resolve */
        "rootDir": "./src",
        "paths": {
            "*": ["./src/*"],
            "@/*": ["./src/*"]
        },
        /* JavaScript Support */
        "allowJs": true,
        "maxNodeModuleJsDepth": 1,

        /* Emit */
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "checkJs": true,
        // "emitDeclarationOnly": true,
        // "sourceMap": true,

        // "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types",

        /* Interop Constraints */
        // "allowSyntheticDefaultImports": true,
        // "esModuleInterop": true,
        // "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "allowUnreachableCode": false,

        /* Completeness */
        "skipLibCheck": true
    },
    "include": ["src", "*.tsx", "*.ts", "./general.d.ts"],
    "exclude": ["coverage", "config", "dist", "node_modules/**", "docs", "all_flags"]
}
